{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "website-searcher",
  "version": "0.1.0",
  "identifier": "com.reekid.website-searcher",
  "build": {
    "frontendDist": "../gui/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm --dir gui dev",
    "beforeBuildCommand": "pnpm --dir gui build"
  },
  "app": {
    "windows": [
      {
        "title": "website-searcher",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "bin/website-searcher"
    ],
    "resources": [
      "wix/bin/ws.cmd"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "fragmentPaths": [
          "wix/cli_and_path.wxs"
        ]
      }
    }
  }
}
